<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.example.Scrabble.View.LobyController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="gameid" text='Game ID : ...' />
    <VBox fx:id="playerList" alignment="CENTER" spacing="20.0" >
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <HBox fx:id="player1" alignment="CENTER" spacing="10.0" >
            <Label fx:id="player1Name" text="Player 1" />
            <Button fx:id="player1Button" text="Ready" onAction="#onReadyButtonClick" />
        </HBox>
          <HBox fx:id="player2" alignment="CENTER" spacing="10.0" >
            <Label fx:id="player2Name" text="Player 2" />
            <Button fx:id="player2Button" text="Ready" onAction="#onReadyButtonClick" />
        </HBox>
    </VBox>
    <Button text="Start Game" onAction="#onHostGameButtonClick" />

</VBox>